{
    "name": "backend-cloud-app",
    "version": "0.1.0",
    "description": "Backend with mongoose",
    "main": "index.ts",
    "scripts": {
        "build": "rimraf build && npm i && tsc",
        "tsc": "tsc",
        "clean": "rm -rf build node_modules",
        "rebuild": "npm run clean && npm run build",
        "start": "nodemon",
        "deploy": "npm run build && node ./build/index.js",
        "node": "node ./build/index.js",
        "ts:watch": "tsc -w",
        "exec": "npm run tsc && npm run node"
    },
    "keywords": [
        "MEAN",
        "Mongoose",
        "Node.js",
        "Backend",
        "REST"
    ],
    "author": "Ramin Armanfar",
    "license": "ISC",
    "dependencies": {
        "bcrypt-nodejs": "0.0.3",
        "body-parser": "^1.18.3",
        "compression": "^1.7.3",
        "cookie-parser": "^1.4.3",
        "cors": "^2.8.4",
        "express": "^4.16.3",
        "helmet": "^3.13.0",
        "html-pdf": "^2.2.0",
        "mongoose": "^5.2.14",
        "morgan": "^1.9.1",
        "multer": "^1.3.0",
        "nodemailer": "^4.6.3",
        "path": "^0.12.7",
        "promise": "^8.0.1",
        "rimraf": "^2.6.2"
    },
    "devDependencies": {
        "@types/body-parser": "^1.17.0",
        "@types/cookie-parser": "^1.4.1",
        "@types/cors": "^2.8.4",
        "@types/express": "^4.16.0",
        "@types/helmet": "0.0.41",
        "@types/mongoose": "^5.2.13",
        "@types/morgan": "^1.7.35",
        "@types/node": "^10.9.4",
        "@types/compression": "0.0.36",
        "core-js": "^2.5.7",
        "nodemon": "^1.18.4",
        "shared-tslint-rules": "^3.0.0",
        "ts-node": "^7.0.1",
        "typescript": "^3.0.3"
    }
