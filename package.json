{
    "name": "backend-cloud-app",
    "version": "1.0.0",
    "description": "Backend with mongoose",
    "main": "index.ts",
    "scripts": {
        "tsc": "rimraf build && tsc",
        "build": "npm i && npm run tsc",
        "clean": "rm -rf build node_modules",
        "rebuild": "npm run clean && npm run build",
        "start": "nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts",
        "deploy": "npm run build && node ./build/index.js",
        "node": "node ./build/index.js",
        "ts:watch": "tsc -w",
        "exec": "npm run tsc && npm run node"
    },
    "keywords": [
        "MEAN",
        "Mongoose",
        "Node.js",
        "Backend",
        "REST"
    ],
    "author": "Ramin Armanfar",
    "license": "ISC",
    "dependencies": {
        "bcrypt": "3.0.2",
        "bcrypt-nodejs": "0.0.3",
        "body-parser": "^1.18.3",
        "compression": "^1.7.3",
        "cookie-parser": "^1.4.3",
        "cors": "^2.8.4",
        "express": "4.16.4",
        "helmet": "3.14.0",
        "html-pdf": "^2.2.0",
        "jsonwebtoken": "8.3.0",
        "mongoose": "5.3.6",
        "morgan": "^1.9.1",
        "multer": "1.4.1",
        "nodemailer": "^4.6.3",
        "path": "^0.12.7",
        "promise": "^8.0.1",
        "rimraf": "^2.6.2"
    },
    "devDependencies": {
        "@types/bcrypt": "3.0.0",
        "@types/body-parser": "^1.17.0",
        "@types/compression": "0.0.36",
        "@types/cookie-parser": "^1.4.1",
        "@types/cors": "^2.8.4",
        "@types/express": "^4.16.0",
        "@types/helmet": "0.0.41",
        "@types/jsonwebtoken": "7.2.8",
        "@types/mongoose": "5.2.20",
        "@types/morgan": "^1.7.35",
        "@types/multer": "1.3.7",
        "@types/node": "10.12.0",
        "@types/rimraf": "2.0.2",
        "core-js": "^2.5.7",
        "nodemon": "^1.18.5",
        "shared-tslint-rules": "^3.0.0",
        "ts-node": "7.0.1",
        "typescript": "3.1.3"
    }
}
